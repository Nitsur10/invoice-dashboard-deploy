# Multi-Agent Orchestration System Configuration

# =============================================================================
# GITHUB INTEGRATION
# =============================================================================
# Required for GitHub API integration (optional - can use backlog.yaml instead)
GITHUB_TOKEN=your-github-personal-access-token
GITHUB_OWNER=your-github-username-or-org
GITHUB_REPO=your-repository-name

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Month-over-month calculations for dashboard stats
FEATURE_MOM_CALCS=false

# Enhanced filtering options for invoices
FEATURE_ADVANCED_FILTERS=false

# Real-time analytics dashboard
FEATURE_REALTIME_ANALYTICS=false

# =============================================================================
# QUALITY GATE THRESHOLDS
# =============================================================================
# Test Coverage
MIN_TEST_COVERAGE=85
MAX_TEST_RUNTIME=300  # 5 minutes

# Bundle Size (KB)
MAX_BUNDLE_SIZE=250
WARN_BUNDLE_SIZE=200

# Performance (milliseconds)
MAX_API_RESPONSE_TIME=200
MAX_PAGE_LOAD_TIME=3000

# Accessibility
MIN_ACCESSIBILITY_SCORE=95
ACCESSIBILITY_TAGS=wcag2aa

# Security
SECURITY_AUDIT_LEVEL=high
ENABLE_SECRET_SCANNING=true

# =============================================================================
# DEVELOPMENT ENVIRONMENT
# =============================================================================
# Node environment
NODE_ENV=development

# Development server port
PORT=3000

# Enable debug logging
DEBUG_AGENTS=false
DEBUG_ORCHESTRATION=false

# =============================================================================
# CI/CD INTEGRATION
# =============================================================================
# Automatic PR creation
AUTO_CREATE_PR=false

# Automatic merge after quality gates pass
AUTO_MERGE_ON_SUCCESS=false

# Deployment environment
DEPLOYMENT_ENV=staging

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================
# Slack webhook for notifications (optional)
SLACK_WEBHOOK_URL=

# Email notifications
NOTIFICATION_EMAIL=

# =============================================================================
# AGENT-SPECIFIC CONFIGURATION
# =============================================================================

# Spec Agent
SPEC_OUTPUT_DIR=docs/specs
SPEC_TEMPLATE=default

# Tests Agent
TESTS_UNIT_PATTERN=**/*.test.ts
TESTS_INT_PATTERN=tests/integration/*.int.test.ts
TESTS_E2E_PATTERN=tests/e2e/*.spec.ts
TESTS_PARALLEL=true

# Implementation Agent
IMPL_FEATURE_FLAGS=true
IMPL_BACKWARD_COMPAT=true

# QA Agent
QA_BROWSER_LIST=chromium,firefox,webkit
QA_VISUAL_REGRESSION=true
QA_A11Y_REPORTER=json

# Security Agent
SEC_GITLEAKS_CONFIG=.gitleaks.toml
SEC_ESLINT_CONFIG=.eslintrc.js
SEC_AUDIT_OUTPUT=json

# Documentation Agent
DOCS_UPDATE_README=true
DOCS_GENERATE_ADR=true
DOCS_CHANGELOG_FORMAT=conventional

# Release Agent
RELEASE_BRANCH_PREFIX=feature
RELEASE_CONVENTIONAL_COMMITS=true
RELEASE_SQUASH_MERGE=true
RELEASE_DELETE_BRANCH=true

# =============================================================================
# PROJECT-SPECIFIC SETTINGS (Invoice Dashboard)
# =============================================================================

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your-supabase-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_INVOICES_TABLE=invoices

# Invoice Dashboard Features
ENABLE_INVOICE_FILTERING=true
ENABLE_KANBAN_VIEW=true
ENABLE_ANALYTICS_DASHBOARD=true
ENABLE_STATUS_TRACKING=true

# Dashboard Performance
DASHBOARD_CACHE_TTL=300  # 5 minutes
API_RATE_LIMIT=100       # requests per minute
INVOICE_PAGE_SIZE=25

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================

# Application Performance Monitoring
APM_SERVICE_NAME=invoice-dashboard
APM_ENVIRONMENT=development

# Log Level
LOG_LEVEL=info

# Health Check Endpoints
ENABLE_HEALTH_CHECKS=true
HEALTH_CHECK_PORT=3001

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Content Security Policy
CSP_REPORT_ONLY=true

# HTTPS Settings (production)
FORCE_HTTPS=false
HSTS_MAX_AGE=31536000

# Session Security
SESSION_SECRET=your-session-secret
SESSION_TIMEOUT=3600  # 1 hour

# =============================================================================
# BACKUP & RECOVERY
# =============================================================================

# Database Backup
ENABLE_AUTO_BACKUP=false
BACKUP_RETENTION_DAYS=30

# Code Backup
ENABLE_GIT_BACKUP=true
BACKUP_REMOTE=backup-origin